@model E_TRADING.Models.CategoryProductViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class='container' style='background:#eee; overflow:hidden'>
    <div class='col-lg-10 searchblock '>
        <input type='text' class='form-control searchfield button-image-search' />
    </div>
    <div class='col-lg-2 searchblock'>
        <input type='submit' class='btn btn-default searchfield-button button-image-search' />
    </div>
    <div class='col-lg-12 col-md-12'>
        @foreach (var item in Model.Categories)
        {
            <div class='col-lg-3 category-block button-image-category'>@item.Name</div>
        }
    </div>
    <div class='col-lg-12 col-md-12'>
        <h1>Random Products</h1>
    </div>
    <div class='col-lg-12 col-md-12'>
        @foreach (var item in Model.Products)
        {
            <div class='col-lg-3 product-block'>
                <div class='col-lg-12 product-image-block'>
                    <img src='/Content/category-icon-png.png' />
                </div>
                <div class='col-lg-12 product-small-description'>
                    @Html.ActionLink(item.Name, "Index", "Product", new { id = item.Id }, new { @class = "product-link" })
                    <p class='product-price'>@item.Price</p>
                </div>
            </div>
        }
    </div>
</div>