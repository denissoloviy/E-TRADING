@model IEnumerable<E_TRADING.Data.Entities.Image>
@{
    ViewBag.Title = "Завантажити зображення";
}

<div class="jumbotron container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Оберіть нову назву для каталогу</h4>
        </div>
        <div class="panel-body">
            <section id="upload-image-section">
                @using (Html.BeginForm("UploadImage", "Product", FormMethod.Post, new { @class = "form-horizontal ", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="">
                        <input type="hidden" id="id" name="id" value="@ViewBag.ProductId">
                    </div>
                    <div class="form-group" style="float:left">
                        <div class="col-lg-12 ">
                            <input type="file" name="files" /><
                        </div>
                    </div>
                    <div class="form-group" style="float:left">
                        <div class="col-lg-2 ">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Завантажити" class="btn btn-default " />
                            </div>
                        </div>
                    </div>
                }
            </section>
            <hr/>
        </div>
    </div>
</div>

