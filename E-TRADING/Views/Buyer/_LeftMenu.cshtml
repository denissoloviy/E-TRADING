@using E_TRADING.Common.Extensions
@model E_TRADING.Common.Models.BuyerProfileHelperViewModel

<div class="row">
    <style type="text/css">
        @@media only screen and (min-width: 768px) {
            .sidebar-nav .navbar .navbar-collapse {
                padding: 0;
                max-height: none;
            }

            .sidebar-nav .navbar ul {
                float: none;
            }

                .sidebar-nav .navbar ul:not {
                    display: block;
                }

            .sidebar-nav .navbar li {
                float: none;
                display: block;
            }

                .sidebar-nav .navbar li a {
                    padding-top: 12px;
                    padding-bottom: 12px;
                }

            #menu a.active {
                background: #cac9c9;
                color: black;
            }

            .left {
                float: left;
                width: 270px;
                padding: 20px;
            }

            .content {
                float: left;
                width: 76%;
            }
        }
    </style>
</div>

<div class="left">
    <div class="sidebar-nav">
        <div class="navbar navbar-default" role="navigation">
            <div id="menu" class="navbar-collapse collapse sidebar-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@ViewContext.RouteIsActive("Index", "Buyer")"><a href="@Url.Action("Index", "Buyer")">Основні дані</a></li>
                    <li class="@ViewContext.RouteIsActive("Index", "ShoppingCart")"><a href="@Url.Action("Index", "ShoppingCart")"><span>Корзина&nbsp;</span><span class="badge">@Model.ShoppingCartCount</span></a></li>
                    <li class="@ViewContext.ActionIsActive("Products")"><a href="@Url.Action("Products", "Buyer")"><span>Активні замовлення&nbsp;</span><span class="badge">@Model.ActiveOrdersCount</span></a></li>
                    <li class="@ViewContext.ActionIsActive("Products")"><a href="@Url.Action("Products", "Buyer")"><span>Архів замовлень&nbsp;</span><span class="badge">@Model.InactiveOrdersCount</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

