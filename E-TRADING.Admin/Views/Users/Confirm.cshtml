@using E_TRADING.Data.Entities;
@model E_TRADING.Data.Entities.Seller
@{
    ViewBag.Title = "Confirm Seller";
}

<div class="jumbotron container-fluid">
    <div class="panel panel-default" id="BuyerCatalog">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        @Html.ActionLink("Back to details", "GetSellerInformation", "Users", new { id = Model.Id }, new { @class = "btn btn-default" })
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <table class="table">
                        <tr>
                            <td style="border-top:none" class="col-lg-4">Логін:</td>
                            <td style="border-top: none; text-align:center">@Model.User.UserName</td>
                        </tr>
                        <tr>
                            <td class="col-lg-4">Ім'я:</td>
                            <td style="text-align:center">@Model.User.FirstName</td>
                        </tr>
                        <tr>
                            <td class="col-lg-4">Прізвище:</td>
                            <td style="text-align:center">@Model.User.LastName</td>
                        </tr>
                        <tr>
                            <td class="col-lg-5">Контактний телефон:</td>
                            <td style="text-align:center">@Model.ContactPhone</td>
                        </tr>
                        <tr>
                            <td class="col-lg-5">Телефон продавця:</td>
                            <td style="text-align:center">@Model.User.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td class="col-lg-4">Користувач підтверджений:</td>
                            <td style="text-align:center">@Model.IsConfirmed</td>
                        </tr>
                        <tr>
                            <td class="col-lg-4">Текст помилки:</td>
                            <td style="text-align:center">@Model.ErrorText</td>
                        </tr>
                        <tr>
                            <td class="col-lg-4">Адреса:</td>
                            <td style="text-align:center">
                                Адреса продавця: @Model.User.Address<br />
                                Адреса офісу: @Model.OfficeAddress
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-lg-6">
                    <img style="height: 200px; float:right;" src="/Content/profile-pic.png" />
                </div>
                <hr />
            </div>
            @using (Html.BeginForm("Confirm", "Users", FormMethod.Post,new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.IsConfirmed, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(m => m.IsConfirmed)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ErrorText, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ErrorText, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Confirm" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
