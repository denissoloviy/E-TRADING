@using E_TRADING.Data.Entities;
@model List<User>
    @{
        ViewBag.Title = "AdminUsers";
    }
    <div class="jumbotron container-fluid">
        <div class="panel panel-default" id="BuyerCatalog">
            <div class="panel-heading">
                Покупці
            </div>
            <div class="panel-body">
                <table class="table margin-top-10">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count() > 0)
                            {
                                foreach (var x in Model)
                                {
                                    <tr>
                                        <td>
                                            @x.Email
                                        </td>
                                        <td>
                                            @x.UserName
                                        </td>
                                        <td>    
                                            @x.FirstName
                                        </td>
                                        <td>
                                            <a class="btn btn-default" title="Edit" href="@Url.Action("ChangePassword", "Users", new { id = x.Id })">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            <a class="btn btn-danger" title="Delete" href="@Url.Action("DeleteAdmin", "Users", new { id = x.Id })">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </td>
                                    </tr>
                                  
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">
                                        <h3>No admin found</h3>
                                    </td>
                                </tr>
                            }

                        }
                        <tr>
                            <td>
                                <a class="btn btn-success" title="Add" href="@Url.Action("AddAdmin", "Users", new { })">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </a>
                               Add an admin
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
