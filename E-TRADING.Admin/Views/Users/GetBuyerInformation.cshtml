@using E_TRADING.Data.Entities;
@model E_TRADING.Data.Entities.Buyer
@{
    ViewBag.Title = "GetBuyerInformation";
}

<div class="jumbotron container-fluid">
    <div class="panel panel-default" id="BuyerCatalog">
        <div class="panel-heading">
            Покупець
        </div>
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="col-lg-5">
                   <table class="table">
                       <tr style="border-top:none">
                           <td style="border-top:none" class="col-lg-4">Login:</td>
                           <td style="border-top: none; text-align:center">@Model.User.UserName</td>
                       </tr>
                       <tr>
                           <td class="col-lg-4">Name:</td>
                           <td style="text-align:center">@Model.User.FirstName</td>
                       </tr>
                       <tr>
                           <td class="col-lg-4">Last name:</td>
                           <td style="text-align:center">@Model.User.LastName</td>
                       </tr>
                   </table>
                </div>
                <div class="col-lg-offset-1 col-lg-6" >
                  <img style="height: 200px; float:right;" src="/Content/profile-pic.png" />
                </div>
                <hr />
            </div>
            <div class="col-lg-12">
               <h1 style="text-align:center">Orders</h1>
                <hr />
            </div>
            <table class="table margin-top-10">
                <thead>
                    <tr>
                        <th>Order number</th>
                        <th>Product number</th>
                        <th>Product code</th>
                        <th>Amount</th>
                        <th>Order status</th>
                        <th>Price</th>
                        <th>Delivery addres</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Orders.Count() > 0)
                    {
                        foreach (Order order in Model.Orders)
                        {
                            <tr>
                                <td>order.OrderNumber</td>
                                <td>order.Product.Name</td>
                                <td>order.Product.ProductCode</td>
                                <td>order.Amount</td>
                                <td>order.Status</td>
                                <td>order.FullPrice</td>
                                <td>order.ShippingAddress</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td style="text-align:center" colspan="7">
                                This user has never ordered anything
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



